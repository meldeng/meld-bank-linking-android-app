<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_institution_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Institution Connection Details" />

    <Button
        android:id="@+id/button_financial_accounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Financial Accounts" />

    <Button
        android:id="@+id/button_financial_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Financial Account Transactions" />

    <Button
        android:id="@+id/button_institutions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Institutions" />

</LinearLayout>